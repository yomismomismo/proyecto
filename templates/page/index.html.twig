{% extends "page/layout.html.twig" %}
{% block head %} 

        <link rel="stylesheet" href="plugins/owl.carousel/dist/assets/owl.carousel.min.css">
        <link rel="stylesheet" href="plugins/owl.carousel/dist/assets/owl.theme.default.min.css">
        <script src="/plugins/owl.carousel/dist/owl.carousel.min.js"></script>
        <script src="/js/js-admin/carousel.js"></script>
{% endblock %}
{% block contenido %}
<div class="clearboth"></div>

<section>
<div class="container" style="margin-top: 100px;">
		<h1>Categorías</h1>
  

                        <div class="row">
                            <div class="col-md-12">
                            <br>
                                <div class="row">
                                    <div class="col-md-12 mb-4 pl-0 pr-0">
                                        <div class="owl-container">
                                            <div class="owl-carousel basic">
                                        {% for categoria in categorias %}
                                                <div class="card flex-row">

                                                    <div class="w-50" style="display:contents;">
                                                        <div class="card-body">
                                                            <h6 class="mb-4" style="text-align:center; margin-top:20px;">{{categoria.getCategoria()}}</h6>
                                                        </div>
                                                    </div>
                                                </div>
                                        {% endfor %} 
                            
                                            </div>
                                            <div class="slider-nav text-center">
                                                <a href="#" class="left-arrow owl-prev">
                                                    <i class="ik ik-chevron-left"></i>
                                                </a>
                                                <div class="slider-dot-container"></div>
                                                <a href="#" class="right-arrow owl-next">
                                                    <i class="ik ik-chevron-right"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
	</section>

<hr style="margin-top: 100px;">
<div class="clearboth"></div>
<section class="container">
	<h1 style="text-align: center; margin-bottom:56px;">Lo más vendido</h1>
			<div class="row">
             {% for producto in productos|reverse|slice(0, 8)  %}
				<div class="col-6 col-lg-3" > <img style="width:247px;" src="img/thumb.jpg" alt="Preview image">
					<div id="products"><p>{{producto.getUnidadesVendidas()}}</p>
					<p>Precio</p></div></div>
                      {% endfor %} 
					</div>
                  
	

</section>
	<div id="imgindex1"></div>		
<section class="container">
	<h1 style="text-align: center; margin-bottom:56px;">Últimas unidades</h1>
			<div class="row">

                            {% for stocks in stock|reverse|slice(0, 8) %}
                            {% if stocks.getUnidadesStock < 10 %}
				                <div class="col-6 col-lg-3"> <img style="width:247px;" src="img/thumb.jpg" alt="Preview image">
                                         <div id="products"><p>{{stocks.getNombre()}}</p>
					<p>Precio</p></div></div>
                            {% else %}
                {% endif %}{% endfor %} 
                   
					</div>
                  
				

</section>
                        <div class="row">
                        
	<div id="imgindex2" class="col-md-6"></div>
    <div id="cajatexto" class="col-md-6" style="background-color:white;">
		<h1>Sobre Nosotros</h1>
			<p id="texto">Productos para conejo de las mejores marcas</p>
    </div>

</div>
{% endblock %}